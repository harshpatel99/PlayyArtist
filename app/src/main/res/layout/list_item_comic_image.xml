<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_margin="4dp"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/newComicImageView"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="16dp"
        android:background="@color/light"
        android:visibility="gone"
        app:layout_constraintEnd_toStartOf="@id/newComicBrowseButton"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/newComicTotalImagesLayout" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/newComicBrowseButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="8dp"
        android:text="@string/browse"
        android:textColor="@color/backgroundGradientLight"
        app:backgroundTint="@color/light"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toEndOf="@id/newComicImageView"
        app:layout_constraintTop_toBottomOf="@id/newComicTotalImagesLayout" />

</androidx.constraintlayout.widget.ConstraintLayout>